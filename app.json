{
  "expo": {
    "name": "Talk To Listen",
    "slug": "talk-to-listen",
    "version": "4.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "developmentTarget": "17.0",
      "bundleIdentifier": "com.hieu65.talktolisten",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Our app uses the microphone to record your voice commands and questions, which are then sent to our server to understand your requests and generate interactive responses from characters. For example, you can ask a character about the weather, and the app will provide a spoken response as if you're having a conversation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.hieu65.talktolisten"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "b2135036-aff9-49f5-b7dc-b8d435ba76cc"
      }
    },
    "owner": "hieu65"
  }
}
